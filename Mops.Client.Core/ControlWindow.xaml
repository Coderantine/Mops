<Window x:Class="Mops.Client.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mops.Client"
        mc:Ignorable="d"
        MouseMove="Window_MouseMove"
        Initialized="Window_Initialized"
        Title="ControlWindow">

    <Window.InputBindings>
        <KeyBinding Command="{Binding Start}" Key="Space"/>
        <KeyBinding Command="{Binding Stop}" Key="Esc"/>
    </Window.InputBindings>

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <StackPanel Width="300" MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave" Background="AliceBlue" VerticalAlignment="Bottom" HorizontalAlignment="Right">
        <TextBlock x:Name="Console"></TextBlock>
        <Button Margin="40" Click="Start_Clicked">Start</Button>
        <Button Margin="40" Click="Stop_Clicked">Stop</Button>
    </StackPanel>
</Window>
